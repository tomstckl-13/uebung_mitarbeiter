<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MitarbeiterVerwaltung.Gui.Pages.Chart"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodels="clr-namespace:MitarbeiterVerwaltung.Core.ViewModels;assembly=MitarbeiterVerwaltung.Core"
             x:DataType="viewmodels:ChartViewModel"
             
             >

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior 
        EventName="Appearing"
        Command="{Binding GetAllCommand}"/>
    </ContentPage.Behaviors>

    <chart:SfCircularChart>
        <chart:SfCircularChart.Title>
            <Label Text="Mitarbeiter"/>
        </chart:SfCircularChart.Title>

       
        <chart:SfCircularChart.Legend>
            <chart:ChartLegend/>
        </chart:SfCircularChart.Legend>

        <chart:PieSeries ItemsSource="{Binding Mit}"
                         XBindingPath="Abteilung" 
                         YBindingPath="IstVollzeit"
                         ShowDataLabels="True"
                         EnableTooltip="True"/>
    </chart:SfCircularChart>

</ContentPage>